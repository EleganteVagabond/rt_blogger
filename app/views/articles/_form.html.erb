<%= form_for(@article, html: {multipart: true} ) do |f| %>
  <!-- print any error message for the user !-->
  <ul>
      <% @article.errors.full_messages.each do |emsg| %>
      <li> <%= emsg %> </li>
      <% end %>
  </ul>

  <div class="input">
  <p>
      <%= f.label :title %> <br/>
      <%= f.text_field :title %>
  </p>
  <p>
      <%= f.label :body %> <br/>
      <%= f.text_area :body %>
  </p>
  <p>
        <% if @article.image.attached? %>
            <%= image_tag @article.image.variant(resize_to_limit:[100, 100]) %>
        <% end %>
        <%= f.label :image, "Attach a new image" %> <br/>
        <%= f.file_field :image %>
  </p>
  <p>
        <%= f.label :tag_list %> <br/>
        <%= f.text_field :tag_list %> 
  </p>
  <p>
      <%= f.submit %>
  </p>
  </div>


<% end %>